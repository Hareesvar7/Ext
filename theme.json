{
    "$schema": "vscode://schemas/color-theme",
    "name": "My OPA AI Theme",
    "type": "dark",
    "colors": {
        "editor.background": "#1e1e1e",
        "editor.foreground": "#d4d4d4",
        "editorCursor.foreground": "#d4d4d4",
        "editor.lineHighlightBackground": "#2a2a2a",
        "editorLineNumber.foreground": "#5a5a5a",
        "notification.background": "#323232",
        "notification.foreground": "#ffffff",
        "notification.buttonBackground": "#007acc",
        "notification.buttonHoverBackground": "#005a9c",
        "notification.infoBackground": "#007acc",
        "notification.warningBackground": "#e7c600",
        "notification.errorBackground": "#d9534f"
    },
    "tokenColors": [
        {
            "scope": "comment",
            "settings": {
                "foreground": "#608b4e"
            }
        },
        {
            "scope": "keyword",
            "settings": {
                "foreground": "#569cd6"
            }
        }
    ]
}
