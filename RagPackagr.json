{
    "name": "cloud-service-policy-extension",
    "displayName": "Cloud Service Policy Extension",
    "description": "An extension for selecting cloud services and displaying OPA policy templates.",
    "version": "1.0.0",
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.showCloudServiceSelection"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.showCloudServiceSelection",
                "title": "Select Cloud Service"
            }
        ]
    },
    "scripts": {
        "lint": "eslint .",
        "compile": "npx tsc",
        "test": "npm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "typescript": "^4.4.3",
        "vscode": "^1.1.37"
    },
    "dependencies": {
        "vscode": "^1.60.0"
    }
}
